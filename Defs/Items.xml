<?xml version="1.0" encoding="utf-8" ?>
<Items>

  <ThingDef ParentName="ResourceBase">
    <defName>CookingRecipe</defName>
    <label>Basic Cooking Recipe</label>
    <description>Teaches how to cook a meal.</description>
    <thingClass>ThingWithComps</thingClass>
    <graphicData>
      <texPath>RecipeA</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <thingCategories>
      <li>Recipes</li>
    </thingCategories>
    <tradeTags>
      <li>Recipes</li>
    </tradeTags>
    <stackLimit>1</stackLimit>
    <tradeNeverStack>true</tradeNeverStack>
    <useHitPoints>true</useHitPoints>
    <drawGUIOverlay>false</drawGUIOverlay>
    <statBases>
      <MarketValue>1</MarketValue>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>0.1</Mass>
    </statBases>
    <comps>
      <li Class="CompProperties_Usable">
        <useJob>LearnRecipe</useJob>
        <useLabel>Learn</useLabel>
      </li>
      <li Class="CompProperties_UseEffect">
        <compClass>Materia.RecipeUseEffect</compClass>
      </li>
      <li>
        <compClass>Materia.MateriaRecipeComp</compClass>
      </li>
    </comps>
  </ThingDef>

  <ThingDef>
    <defName>UnfinishedRecipe</defName>
    <label>unfinished recipe</label>
    <thingClass>Materia.UnfinishedRecipe</thingClass>
    <category>Item</category>
    <graphicData>
      <texPath>RecipeA</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <useHitPoints>true</useHitPoints>
    <isUnfinishedThing>true</isUnfinishedThing>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <selectable>true</selectable>
    <tradeability>Never</tradeability>
    <drawerType>RealtimeOnly</drawerType>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
			<DeteriorationRate>2.0</DeteriorationRate>
			<Beauty>-6</Beauty>
		</statBases>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <alwaysHaulable>true</alwaysHaulable>
    <rotatable>false</rotatable>
    <pathCost>15</pathCost>
    <thingCategories>
      <li>Unfinished</li>
    </thingCategories>
  </ThingDef>

</Items>